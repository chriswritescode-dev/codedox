# Database Configuration
DB_HOST=YOUR_DB_HOST
DB_PORT=5432
DB_NAME=codedox
DB_USER=mcp
DB_PASSWORD=YOUR_PASSWORD_HERE

# LLM Configuration
CODE_LLM_API_KEY=test-key  # Required: API key for LLM extraction
CODE_LLM_PROVIDER=openai  # LLM provider: openai, anthropic, ollama, groq, gemini, deepseek
CODE_LLM_EXTRACTION_MODEL=Q3-Coder
CODE_LLM_BASE_URL=http://YOUR_LLM_HOST:8000/v1
CODE_LLM_NUM_PARALLEL=30
CODE_DISABLE_FORMATING=true
# Crawling Configuration
CRAWL_RESPECT_ROBOTS_TXT=true
CRAWL_MAX_CONCURRENT_PAGES=3
CRAWL_CONTENT_SIZE_LIMIT=50000
CRAWL_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
CRAWL_MAX_CONCURRENT_SESSIONS=5

 




# MCP Server Configuration
MCP_PORT=8899
MCP_HOST=0.0.0.0

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/codedox.log

# Optional: OpenAI Configuration (if using OpenAI for LLM)
# OPENAI_API_KEY=your-openai-api-key

# Optional: Anthropic Configuration (if using Claude for LLM)
# ANTHROPIC_API_KEY=your-anthropic-api-key
